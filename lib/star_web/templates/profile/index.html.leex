      </form>
      <!-- Form --!>
    </div>
    <!-- Editar Nombre  --!>

    <!-- Editar Email  --!>
    <a class="oswald redvp" data-toggle="collapse" href="#collapseEditEmail" role="button" aria-expanded="false" aria-controls="collapseEditEmail">
        Editar Email
    </a>
    <hr>
    <div class="collapse" id="collapseEditEmail">
      <!-- Form --!>
